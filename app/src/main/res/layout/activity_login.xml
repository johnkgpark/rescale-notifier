<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:screenOrientation="portrait"
    android:configChanges="orientation|keyboardHidden"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login">

    <TextView android:text="Enter your credentials" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"/>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:paddingTop="20dp"
        android:layout_centerHorizontal="true" />

    <EditText android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/title"
        android:inputType="textEmailAddress"
        android:hint="email"
        android:id="@+id/editTextEmail"></EditText>

    <EditText android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/editTextEmail"
        android:inputType="textPassword"
        android:hint="password"
        android:id="@+id/editTextPassword"></EditText>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/editTextPassword"
        android:text="Submit"
        android:onClick="logIn"/>
</RelativeLayout>